<div id="animation">
  {{> animation}}
</div>



<div id='form' style='display: none;'>
  {{#if currentUser}}
    <div class='container-fluid'>
      <h1>Dashboard</h1>
      <br />
      <div class='row'>

      <div class='col'>
        <h1>Clients list:</h1>
        <br />
        <div class='col-sm'>
          {{#each user}}
            {{#each this.userClients}}
              <a
                type='button'
                class='btn btn-lg btn-light btn-default btn-outline-dark'
                href='/clients/{{_id}}'
              >{{this.companyName}}
              </a>
              <br />
              <br />
            {{/each}}
          {{/each}}
        </div>
        <a
          type='button'
          class='btn btn-secondary btn-default btn-colors'
          href='/clients/new'
        >New Client
        </a>
      </div>
    </div>
    <br>
    {{!-- <div class='col'>
      <h2>Calendar</h2>
    </div> --}}
  </div>

  {{/if}}</div>
 