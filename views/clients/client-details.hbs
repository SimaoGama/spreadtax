{{!-- <div class="container-fluid" id="form" style="display: none;"> --}}
<div class='container-fluid'>
  <hr />

  <a
    type='button'
    class='btn btn-secondary btn-default btn-colors'
    href='/user/dashboard'
  >Back</a>

  <a
    type='button'
    class='btn btn-secondary btn-default'
    href='/clients/{{client._id}}/edit'
  >Edit Client</a>
  <br />
  <br />

<div class="container-fluid">
  <div class="row">
    <div class="col">
{{#if currentUser}}

    {{#if client.imageUrl}}
      <img
        class='rounded-circle client-logo'
        src='{{client.imageUrl}}'
        alt='client image'
        width='300'
        height='auto'
      />
      <br />
      <br />
    {{/if}}

    <h2> <strong> {{client.companyName}}</strong></h2>

    <br />
    <p><b>Address:</b> {{client.address}}</p>
    <p><b>Email:</b> {{client.email}}</p>
    <p><b>NIPC:</b> {{client.nipc}}</p>
    <p><b>NISS:</b> {{client.niss}}</p>

  {{else}}
    <p>No clients found.</p>
  {{/if}}
    </div>

    <div class="col">
      <h3>Latest messages:</h3>
      <div class="container card bg-secondary" style="min-height: 20rem;">
     {{#each messages}}
      <div class="card-header bg-transparent">
        <div class="card-body p-4">
            {{#is this.sender._id ../currentUser._id}}
          <div class="row justify-content-end">
              <div class="col-auto">
                <div class="card border-light mb-3 text-right">
                  <div class="card-header"><i>{{this.timestamp}}</i></div>
                  <div class="card-body">
                    <p class="card-title">Message sent by {{this.sender.username}}:</p>
                    <h4 class="card-text">{{this.content}}</h4>
                  </div>
                </div>
              </div>
            </div>
            {{else}}
            <div class="row justify-content-start">
              <div class="col-auto">
                <div class="card border-primary bg-light text-black mb-3">
                  <div class="card-header"><i>{{this.timestamp}}</i></div>
                  <div class="card-body">
                    <p class="card-title">Message received from {{this.sender.companyName}}:</p>
                    <h4 class="card-text">{{this.content}}</h4>
                  </div>
                </div>
              </div>
          </div>
            {{/is}}
        </div>
      </div>
      <hr />
      {{/each}}
       </div>
<br>
      <form action="/chat/send/{{client._id}}" method="POST">
        <div class="form-group">
          <input type="hidden" name="recipient" value="{{client._id}}">
          <input type="hidden" name="senderModel" value="User">
          <input type="hidden" name="recipientModel" value="Client">
          <textarea class="form-control" name="message" placeholder="Type your message..." required></textarea>
          <br>
          <button class="btn btn-primary" type="submit">Send</button>
          <a class="btn btn-colors" role="button" href="/{{client._id}}/chat">See all chats</a>
        </div>
      </form>
      
    </div>

  </div>
</div>

  <hr />
</div>
