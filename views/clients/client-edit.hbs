<div class='container'>
  <h1>Edit Client</h1>

  <a
    type='button'
    class='btn btn-secondary btn-default btn-colors'
    href='/clients/{{client.id}}'
  >Back</a>
  <hr />
  <form novalidate action='/clients/edit?id={{client.id}}' method='POST'>

    <div class='form-floating'>
      <input
        class='form-control'
        type='text'
        name='companyName'
        placeholder='username'
        value='{{client.companyName}}'
        required
      />
      <label for=''>{{client.companyName}}</label>
    </div>

    <br />

    <div class='form-floating'>
      <input
        class='form-control'
        type='email'
        name='email'
        placeholder='email'
        value='{{client.email}}'
        required
      />
      <label for='email'>{{client.email}}</label>
    </div>
    <br />

    <br />
    <div class='form-floating'>
      <input
        disabled='disabled'
        class='form-control'
        type='text'
        minlength='9'
        maxlength='9'
        name='nipc'
        required
      />
      <label for='nipc'>{{client.nipc}}</label>
    </div>
    <br />
    <div class='form-floating'>
      <input
        disabled='disabled'
        class='form-control'
        type='text'
        minlength='11'
        maxlength='11'
        name='niss'
        required
      />
      <label for='niss'>{{client.niss}}</label>
    </div>

    <br />
    <div class='form-floating'>
      <input
        class='form-control'
        type='text'
        name='address'
        placeholder='address'
        value='{{client.address}}'
        required
      />
      <label for='address'> {{client.address}} </label>
    </div>

    <br />

    <button class='btn btn-lg btn-primary' type='submit'>Register</button>
  </form>
  <form
    action='/clients/{{client.id}}/delete'
    method='POST'
    {{!-- onsubmit="return confirm('Are you sure you want to delete {{client.companyName}}?')" --}}
  >
    <button class='btn btn-danger'>
      Delete client
    </button>
  </form>
</div>

{{#if errorMessage}}
  <div class='alert alert-danger' role='alert'>
    <div style='color: red'>
      {{errorMessage}}
    </div>
  </div>
{{/if}}