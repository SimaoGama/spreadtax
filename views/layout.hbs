<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <title>{{appTitle}} </title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/stylesheets/styles.css' />
    <script
      src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js'
    ></script>
  </head>

  <header data-bs-theme='light'>
    <nav data-bs-theme='light' class='navbar navbar-expand bg-white fixed-top'>
      <div class='container'>
        <a
          class='title navbar-brand text-uppercase'
          href='/'
          style='margin-top: -20px;'
        >
          Spread<span><i>tax</i></span>
        </a>
        <button
          class='navbar-toggler'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navbarNavAltMarkup'
          aria-controls='navbarNavAltMarkup'
          aria-expanded='false'
          aria-label='Toggle navigation'
        >
          <span class='navbar-toggler-icon'></span>
        </button>
        <div
          class='collapse navbar-collapse navbar-expand-lg navbar-light'
          id='navbarNavAltMarkup'
        >

          <div
            class='navbar-nav ms-auto mb-2 mb-lg-0'
            style='margin-top: 15px; padding:5px;'
          >
            <a class='nav-link active' aria-current='page' href='/'>Home</a>
            <a class='nav-link' href='/#about'>About Us</a>
            <a class='nav-link' href='/#plans'>Pricing</a>

            {{#if currentUser.isAdmin}}
              <a class='nav-link' href='/user/dashboard'>Dashboard</a>

              <li class='nav-item dropdown user-info'>
                <a
                  class='nav-link dropdown-toggle'
                  href='#'
                  id='navbarDropdown'
                  role='button'
                  data-toggle='dropdown'
                  aria-haspopup='true'
                  aria-expanded='false'
                  style='font-size: 20px;'
                >
                  Hello
                  {{currentUser.username}}
                </a>
                <div class='dropdown-menu' aria-labelledby='navbarDropdown'>
                  <a class='dropdown-item' href='/user/dashboard'>Dashboard</a>
                  <a class='dropdown-item' href='/clients/new'>Add client</a>
                  <div class='dropdown-divider'></div>
                  <a
                    class='dropdown-item'
                    href='/user/{{currentUser._id}}/edit'
                  >Settings</a>
                </div>
              </li>
            {{else}}
              <a class='nav-link' href='/user/dashboard'>Dashboard</a>

              <li class='nav-item dropdown user-info'>
                <a
                  class='nav-link dropdown-toggle'
                  href='#'
                  id='navbarDropdown'
                  role='button'
                  data-toggle='dropdown'
                  aria-haspopup='true'
                  aria-expanded='false'
                  style='font-size: 20px;'
                >
                  Hello
                  {{currentUser.companyName}}
                </a>
                <div class='dropdown-menu' aria-labelledby='navbarDropdown'>
                  <a
                    class='dropdown-item'
                    href='/client/dashboard'
                  >Dashboard</a>
                  <div class='dropdown-divider'></div>
                </div>
              </li>
            {{/if}}

            <a class='nav-link user-info' style='font-size: 20px;'>
              {{#if currentUser}}
                {{#if currentUser.accountType.isFree}}
                  <p>Free account</p>
                {{/if}}

                {{#if currentUser.accountType.isPremium}}
                  <p>Premium account</p>
                {{/if}}

                {{#if currentUser.accountType.isUnlimited}}
                  <p>Unlimited account</p>
                {{/if}}
              {{/if}}
            </a>

            {{#unless currentUser}}
              <a class='nav-link' href='/signup'>Register</a>
              <a class='nav-link' href='/login'>Login</a>
            {{/unless}}
            {{#if currentUser}}
              <a class='nav-link'>
                <form action='/logout' method='POST'>
                  <button
                    class='btn btn-secondary btn-colors'
                    type='sumbmit'
                  >Logout</button>
                </form>
              </a>
            {{/if}}
          </div>
          <div class='form-check form-switch mx-4' style='margin-top:-20px;'>
            Dark theme
            <input
              class='form-check-input p-2'
              type='checkbox'
              role='switch'
              id='flexSwithCheckChecked'
              unchecked
              onclick='activateDarkMode()'
            />
          </div>
        </div>
      </div>
    </nav>
  </header>

  <body data-bs-theme='light'>

    {{{body}}}

    <!-- Bootstrap core JavaScript -->
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js'
    ></script>
    <script src='/js/script.js'></script>

  </body>

</html>