<body>
  <div id="animation">
  {{> animation}}
</div>
  <br />
  <div class='container' id='form' style='display: none;'>

    <div class='login'>
  <form novalidate action='/login' method='POST'>
    <label class='form-check-label'>User</label>
    <input class='form-check-input' type='radio' name='loginType' value="isUser" checked />

    <label class='form-check-label'>Client</label>
    <input class='form-check-input' type='radio' name='loginType' value="isClient" />

    <hr />

    <div class='form-floating'>
      <input class='form-control' type='text' name='username' placeholder='Username' required />
      <label for=''>Username:</label>
    </div>
    <br />

    <div class='form-floating'>
      <input class='form-control' type='password' name='password' placeholder='Password' required />
      <label for=''>Password:</label>
    </div>
    <br />
    

    <button class='btn btn-primary rounded-pill' type='submit'>Login</button>
  </form>
</div>

    {{#if errorMessage}}
      <div class='alert alert-danger' role='alert'>
        <div style='color: red'>
          {{errorMessage}}
        </div>
      </div>
    {{/if}}

  </div>

</body>